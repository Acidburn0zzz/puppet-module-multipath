defaults {
    udev_dir                <%= @udev_dir %>
    polling_interval        <%= @pooling_interval %>
    path_selector           <%= @path_selector %>
    path_grouping_policy    <%= @path_grouping_policy %>
    getuid_callout          <%= @get_uid_callout %>
    prio                    <%= @prio %>
    path_checker            <%= @path_checker %>
    rr_min_io               <%= @rr_min_io %>
    rr_weight               <%= @rr_weight %>
    failback                <%= @failback %>
    no_path_retry           <%= @no_path_retry %>
    user_friendly_names     <%= @user_friendly_names %>
    find_multipaths         <%= @find_multipaths %>
}

blacklist { 
    device { 
        vendor "LSILOGIC" 
        product "Logical Volume" 
    } 
}
